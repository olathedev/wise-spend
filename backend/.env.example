# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/wise-spend
# Alternative: MONGO_URI or DATABASE_URL can also be used

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Google OAuth Configuration (for backend token verification)
GOOGLE_CLIENT_ID=your_google_client_id_here

# Google GenAI / Gemini Configuration
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Cloudinary (receipt image storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Opik Observability & Evaluation
OPIK_API_KEY=your_opik_key
OPIK_PROJECT_NAME=WiseSpend-Evals
# Set to true to run LLM-as-a-Judge evaluation on each quiz (25 extra LLM calls per batch; uses more tokens)
# EVALUATE_QUIZZES=false
# Workspace name (can use either variable name)
OPIK_WORKSPACE_NAME=your_workspace_name
# OPIK_WORKSPACE=your_workspace_name  # Alternative variable name
# Optional: For Opik Cloud (default)
OPIK_URL_OVERRIDE=https://www.comet.com/opik/api
# Optional: For self-hosted Opik
# OPIK_URL_OVERRIDE=http://localhost:5173/api
